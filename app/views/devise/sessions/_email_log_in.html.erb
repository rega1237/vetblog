<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "my-3" %>
  </div>

  <div class="field">
    <%= f.label "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-3" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
        <%= f.label "Recordarme" %>
      </div>
    <% end %>

    <div class="actions text-center bg-[#FFD700] font-bold py-2 rounded-md mt-3">
      <%= f.submit "Iniciar Sesión" %>
    </div>
  <% end %>