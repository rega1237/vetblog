<article class="px-5 mx-auto pt-[15rem] md:px-6 md:pb-6">
	<div class="flex flex-col max-w-3xl mx-auto overflow-hidden rounded">
    <%= image_tag(@post.cover_image, class: "w-full h-60 sm:h-96 dark:bg-gray-500")%>
		<div class="bg-[#F2F1F6] shadow-xl p-6 pb-12 m-4 mx-auto -mt-16 space-y-6 lg:max-w-2xl sm:px-10 sm:mx-12 lg:rounded-md">
			<div class="space-y-2">
				<h1 class="inline-block text-2xl font-semibold sm:text-3xl"><%= @post.title %></h1>
				<p class="text-xs dark:text-gray-600">Escrito por
					<a rel="noopener noreferrer" href="https://twitter.com/manuevet" class="text-xs hover:underline">Dr. Manuel Faneite</a>
				</p>
			</div>
			<div>
				<p><%= @post.body %></p>
			</div>
		</div>
	</div>
</article>